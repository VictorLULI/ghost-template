{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}
<section class="pageheader"> 
  <div class="container">
    <div class="row"> 
      <div class="col-md-12">
        <div class="title-holder">
          <div class="title-holder-cell text-left">
            <h1 class="page-title">
                <span>文章分类</span>
            </h1>
            <ol class="breadcrumb">
              <li><a href="#">首页</a></li>                           
              <i class="fa fa-chevron-right" aria-hidden="true" style="font-size: 5px;padding: 4px 10px;"></i>
              <li class="active">{{name}}</li>
            </ol>     
          </div>
        </div> 
      </div>
    </div>
  </div>
</section>
{{/tag}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">
        <div class="post-feed">
            {{#foreach posts}}
                <article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                    {{#if feature_image}}
                        <a class="post-card-image-link" href="{{url}}">
                            <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
                        </a>
                    {{/if}}
                    <div class="post-card-content">
                        <a class="post-card-content-link" href="{{url}}">
                            <header class="post-card-header">
                                {{#if primary_tag}}
                                    <span class="post-card-tags">{{primary_tag.name}}</span>
                                {{/if}}
                                <h2 class="post-card-title">{{title}}</h2>
                            </header>
                            <section class="post-card-excerpt">
                                <p>{{excerpt words="45"}}</p>
                            </section>
                        </a>
                        <footer class="post-card-meta">
                            <img class="author-profile-image" src="{{asset "img/logo-transparent.png"}}" alt="徐州防雷设施检测有限公司重庆分公司" />
                        </footer>
                    </div>
                </article>
            {{/foreach}}
        </div>
    </div>
</main>

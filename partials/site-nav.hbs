{{#get "posts" filter="featured:true" limit="3" as |featured|}}
{{#foreach featured}}
<article class="col-md-4 col-sm-6 col-xs-12 grid-item">
  <div class="portfolio-container">
    <div class="portfolio-image">
      {{#if feature_image}}
          <img src="{{img_url feature_image}}" sizes="(max-width: 600px) 100vw, 600px">
      {{else}}
          <img src="http://placehold.it/600x400" sizes="(max-width: 600px) 100vw, 600px">
      {{/if}}
      <div class="zoom-overlay"></div>
    </div>
    <div class="portfolio-content">
      <h4>{{title}}</h4>
      <div class="portfolio-link">
        <a href="{{url}}"><span class="fa fa-plus"></span>查看详情</a>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</article>
{{/foreach}}
{{/get}}